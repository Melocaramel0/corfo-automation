{
  "name": "corfo-automation-backend",
  "version": "1.0.0",
  "main": "src/server/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "server": "npx ts-node --project tsconfig.json src/server/index.ts",
    "server:dev": "npx nodemon --watch src --ext ts --exec \"npx ts-node --project tsconfig.json src/server/index.ts\"",
    "agente-orquestador": "npx ts-node --project tsconfig.json src/automation/core/agenteOrquestador.ts",
    "generar-informe": "npx ts-node --project tsconfig.json scripts/generarInformePDF.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:fieldExtractor": "vitest run src/automation/fields/__tests__/fieldExtractor.test.ts",
    "test:fieldCompleter": "vitest run src/automation/fields/__tests__/fieldCompleter.test.ts",
    "test:reportGenerator": "vitest run src/services/report/__tests__/reportGenerator.test.ts"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "@types/express": "^4.17.21",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "md-to-pdf": "^5.2.4",
    "openai": "^6.7.0",
    "playwright": "^1.56.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^2.1.8",
    "nodemon": "^3.0.2",
    "vitest": "^2.1.8"
  }
}


